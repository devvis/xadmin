body {
	font-family:Georgia, "Times New Roman", Times, serif;
	font-size:1em;
	behavior:url("csshover3.htc");
	background:#FFFFFF url('./img/bg.png') repeat-x top;
}

div#base {
	width:960px;
	margin:0 auto;
	text-align:left;
}

div#header {
	height:65px;
}

div#footer {
	height:40px;
	line-height:40px;
	padding-top:20px;
	font-size:90%;
	color:#101E29;
	clear:both;
	text-align:right;
}
	div#footer a {
		color:#101E29;
		border-bottom:#101E29 1px dotted;
	}
a.logo {
	position:relative;
	top:15px;
	left:0px;
	letter-spacing:-3px;
	font-size:3em;
	font-family:Arial, Helvetica, sans-serif;
	font-weight:bold;
	color:#FFFFFF;
}

ul.topnav {
	float:right;
	margin-top:35px;
	text-align:right;
}

	ul.topnav li {
		display:inline;
		color:#FFFFFF;
		font-size:90%;
		padding-left:0.1em;
	}
	
		ul.topnav li a {
			color:#C6CC0E;
		}
		
		ul.topnav li a:hover {
			color:#FFFFFF;
			border-bottom:1px solid #C6CC0E;
		}

/* --- [ Main navigation ] --- */

ul#meny, ul#meny ul {
	height:34px;
	width:100%;
	list-style:none;
}
ul#meny {
	z-index:100;
	position:relative;
}
	ul#meny li {
		font-size:100%;
		display:inline;
		float:left;
		margin-top:5px;
		position:relative;
	}
	ul#meny ul li {
		width:100%;
		float:none;
	}
	
		ul#meny li a {
			display:block;
			padding:4px 20px 4px 20px;
			margin:0;
			color:#FFFFFF;
			background:#2E646B;
		}
			ul#meny ul {
				list-style:none;
				position:absolute;
				top:-999em;
				left:-1px;
			}
			ul#meny li:hover ul, ul#meny li.hover ul {
				top:25px;
			}
			ul#meny ul li a {
				margin-top:2px;
				border-left:#234c51 2px solid;
				border-right:#234c51 2px solid;
				border-bottom:#234c51 2px solid;
			}
			


/* --- [ Main ] --- */

div#main {
	clear:both;
	font-size:100%;
	position:static;
	overflow:hidden;
	background:#FFFFFF;
	height:100%;
	margin-top:15px;
}
	div#main div#cont h1 {
		font-family:Georgia, "Times New Roman", Times, serif;
		font-size:2em;
		margin-bottom:5px;
		color:#2D95B5;
		border-bottom:#545454 1px dotted;
		width:auto;
	}
	div#main ul#snabbmeny {
		float:left;
		margin-right:20px;
	}
		div#main ul#snabbmeny li {
			background:url('./img/arr.gif') left no-repeat;
			padding-left:8px;
			margin-bottom:6px;
		}
			div#main ul#snabbmeny li a {
				border-bottom:#234c51 1px dotted;
			}
	div#main div#cont {
		float:left;
		border-left:#545454 1px dotted;
		padding-left:20px;
		width:80%;
	}
	div#main div.clear {
		clear:both;
	}

	div#main div#cont div.row {
		margin-top:8px;
		display:static;
		overflow:hidden;
	}
		div#main div#cont div.row div.right {
			position:relative;
			float:right;
			width:340px;
			text-align:justify;
		}
		div#main div#cont div.row div.right h2 {
			font-size:1.3em;
			border-bottom:#234c51 1px dotted;
			margin-bottom:6px;
			color:#2D95B5;
		}
		div#main div#cont div.row div.right p {
			margin-bottom:10px;
			line-height:1.1em;
		}
		div#main div#cont div.row div.right p:first-letter {
			padding-left:10px;
		}
		div#main div#cont div.row div.left {
			position:relative;
			float:left;
		}
			div#main div#cont div.row div.left h2 {
				font-size:1.2em;
				margin-bottom:10px;
			}
			div#main div#cont div.row div.left dl {
					margin-left:20px;
					padding: 0;
					width: 300px;
			}
				div#main div#cont div.row div.left dl dd {
					width:40%;
					float:right;
				}
				div#main div#cont div.row div.left dl dt,
				div#main div#cont div.row div.left dl dd {
					line-height:125%;
				}
				div#main div#cont div.row div.left dl dt {
					width:60%;
					float:left;
				}

		div#main div#cont form {
			
		}
			div#main div#cont form input, textarea {
				display:block;
				margin-bottom:0.5em;
				padding:0.5em;
				width:25em;
				border:#BDBDBD 1px solid;
			}
			div#main div#cont form textarea {
				height:20em;
			}
			div#main div#cont form textarea.note {
				height:10em;
			}
			div#main div#cont form label {
				font-size:1.3em;
				display:block;
				margin-bottom:0.3em;
			}
				div#main div#cont form input:focus, textarea:focus {
					border:#6ac1ed 1px solid;
				}
			div#main div#cont form input[type="submit"] {
				width:auto;
				margin-bottom:0;
				margin-left:80%;
			}
			div#main div#cont form input[readonly="readonly"]{
				background:#E2E2E2;
			}
			div#main div#cont form select {
				margin-bottom:0.5em;
			}
			div#main div#cont form fieldset {
				border:#030303 1px solid;
				padding:0.6em;
			}
				div#main div#cont form fieldset legend {
					margin-left:0.5em;
					padding-left:0.2em;
					padding-right:0.2em;
				}
			
		div#main div#cont a.good {
			border-bottom:#8dc854 1px solid;
			padding:0.2em;
		}
		div#main div#cont a.good:hover {
			border-bottom:#000000 1px solid;
			background:#8dc854;
		}
		div#main div#cont a.bad {
			border-bottom:#8dc854 1px solid;
			padding:0.2em;
		}
		div#main div#cont a.bad:hover {
			border-bottom:#000000 1px solid;
			background:#e9594d;
		}
		
		div#main div#cont p.question {
			font-weight:bold;
			margin-bottom:1em;
		}
		
		div#main div#cont span.win {
			color:#66CC00;
		}
		div#main div#cont span.loose {
			color:#FF3333;
		}
		div#main div#cont span.draw {
			color:#0099FF;
		}
		
		div#main div#cont p.right {
			margin-top:2em;
			text-align:right;
		}
			div#main div#cont p.right a {
				border-bottom:#8dc854 1px dotted;
				padding:0.2em;
			}
			div#main div#cont p.right a:hover {
				border-bottom:#000000 1px dotted;
				background:#6ac1ed;
			}
			div#main div#cont p.right em {
				font-style:italic;
			}

		div#main div#cont div#xnews {
			text-align:justify;
			line-height:1.1em;
			
		}
			div#main div#cont div#xnews h2 {
				font-size:1.3em;
				border-bottom:#234c51 1px dotted;
				margin-bottom:6px;
				color:#2D95B5;
			}
			div#main div#cont div#xnews p {
				margin-bottom:10px;
				line-height:1.1em;
			}
			div#main div#cont div#xnews p:first-letter {
				padding-left:10px;
			}
		div#main div#cont ul li {
			display:block;
			margin-bottom:0.8em;
		}
				div#main div#cont ul li a {
					border-bottom:#8dc854 1px solid;
				}
				div#main div#cont ul li a.edit {
					border:none;
					margin-left:3em;
				}
				div#main div#cont ul li a.delete {
					border:none;
					margin-left:1.5em;
				}
				div#main div#cont ul li span {
					margin-right:0.5em;
					margin-left:0.5em;
					vertical-align:text-top;
				}
		
		div#main div#cont p.error {
			margin-top:10px;
			background:#F7CBCA url(./img/error.png) center no-repeat;
			background-position:15px 50%;
			text-align:left;
			padding:5px 20px 5px 45px;
			border-top:2px solid #f15752;
			border-bottom:2px solid #f15752;
			margin-bottom:1em;
		}
		div#main div#cont p.info {
			margin-top:10px;
			background:#f8fafc url(./img/info.png) center no-repeat;
			background-position:15px 50%;
			text-align:left;
			padding:5px 20px 5px 45px;
			border-top:2px solid #b5d4fe;
			border-bottom:2px solid #b5d4fe;
			margin-bottom:1em;
		}
		div#main div#cont p.warning {
			margin-top:10px;
			background:#fff6bf url(./img/warning.png) center no-repeat;
			background-position:15px 50%;
			text-align:left;
			padding:5px 20px 5px 45px;
			border-top:2px solid #ffd324;
			border-bottom:2px solid #ffd324;
			margin-bottom:1em;
		}
		div#main div#cont p.success {
			margin-top:10px;
			background:#C9FFCA url(./img/success.png) center no-repeat;
			background-position:15px 50%;
			text-align:left;
			padding:5px 20px 5px 45px;
			border-top:2px solid #38de3b;
			border-bottom:2px solid #38de3b;
			margin-bottom:1em;
		}
		
		div#main div#cont div.kommentar {
			margin-top:10px;
			border-top:#545454 1px dotted;
			padding-top:3px;
		}
			div#main div#cont div.kommentar em {
				font-style:italic;
			}
			div#main div#cont div.kommentar a {
				padding-left:10px;
			}
			div#main div#cont div.kommentar p {
				padding-bottom:3px;
			}
			

/* --- [ Login ] --- */

body#login {
	background:#FFFFFF;
}
div#login {
	width:25%;
	margin:0 auto;
}
	div#login div#logo {
		background:url(xdm.png);
		width:449px;
		height:136px;
		margin:0 auto;
		margin-top:10%;
		margin-bottom:10%;
	}

	div#login form fieldset {
		border:#030303 1px solid;
		padding:0.6em;
	}
		div#login form fieldset legend {
			margin-left:0.5em;
			padding-left:0.2em;
			padding-right:0.2em;
		}
	div#login form label {
		font-size:1.3em;
		display:block;
		margin-bottom:0.3em;
	}
	div#login form input {
		display:block;
		margin-bottom:0.5em;
		padding:0.5em;
		width:90%;
		border:#BDBDBD 1px solid;
	}
	div#login form input[type="submit"] {
		display:block;
		margin-bottom:0.5em;
		padding:0.5em;
		width:auto;
		float:right;
		border:#BDBDBD 1px solid;
	}
		div#login form input:focus {
			border:#6ac1ed 1px solid;
		}

