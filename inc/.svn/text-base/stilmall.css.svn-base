body {
	background:#fff;
	color:#1d1d1d; 
	margin:0;
	font:0.8em "Helvetica";
	
}

#top {
	background:#1d1d1d; 
	position:absolute; 
	top:0; 
	left:0; 
	width:100%; 
	height:60px;
	margin:0;
}

#top a {
	color:#fff;
	text-decoration:none;
}

#footer {
	width:520px; 
	height:30px; 
	margin:0 0 0 300px; 
	background-color:#1d1d1d; 
	padding:5px; color: #fff;
}

#footer a {
	font:1em "Trebuchet MS"; 
	color:#fff; 
	text-decoration:none;
}

#meny {
	margin:65px 0 50px 300px;
	padding-left:0;
	background:#fff;
	color:#1d1d1d;
}

#meny li {
	display:inline;
}

#meny a {
	text-decoration:none; 
	padding:6px 10px 6px 10px;
	color:#1d1d1d;
}

#meny li a:hover {
	background-color:#1d1d1d;
	text-decoration:none;
	color:#fff;
}

#container {
	width:520px; 
	margin:0 0 30px 300px;
	padding:0;
	border-left:1px dotted #A8A8A8;
	padding:0 10px;
}

#meny li a.gul:hover {
	color:#FFE100;
}
#meny li a.orange:hover {
	color:#FF5C00;
}
#meny li a.bla:hover {
	color:#007AFF;
}
#meny li a.gron:hover {
	color:#8FFF00;
}
#meny li a.rod:hover {
	color:#FF0033;
}

h1 {   
	font-family:Arial, Helvetica, sans-serif;
	font-size:30px;
	font-weight:bold;
	margin:0 0 -10px 0;
	letter-spacing:-2px;
	color:#FFE100;
}

#top h1 {
	font-size:50px;
	color:#fff;
	position:absolute;
	left:300px;
}

span.win {
	color:#66CC00;
}
span.loose {
	color:#FF3333;
}
span.draw {
	color:#0099FF;
}

p.note {
	border-bottom:1px dotted #A8A8A8;
	padding-bottom:10px;
}
li a {
	color:#000;
}
p.link {
	text-align:right;
}
p.link a {
	color:#000;
}
div#walloftext {
	text-align:justify;
}


/*
 * Nedan följer CSSen för att styla kommentarformuläret.
 * Kommentarfältet har klassen .kommentar, för att styla input-fältet
 * ändra i form.kommentar input
 * För att ändra textarean; form.kommentar textarea
**/

form.kommentar {
}
	form.kommentar input,textarea {
		display:block;
	}
	form.kommentar label {
		margin-top:10px;
		display:block;
	}

/*
 * Nedan följer CSSen för att styla kommentarerna som skrivs ut av getComments()
 * Namnen ligger i p.namn, datumet i p.datum och kommentaren i p.kommentar.
 * Allt innesluts sedan av div.kommentar
**/
div.kommentar {
	border-bottom:#000 1px solid;
	padding:4px;
	margin-top:4px;
	margin-bottom:4px;
}
	div.kommentar p.namn {
		
	}
	div.kommentar p.datum {
		text-align:right;
	}
	div.kommentar p.kommentar {
		text-align:justify;
	}


/*
 * Nedan följer CSSen för att styla kontakta oss-formuläret.
 * Formuläret har klassen .kontakta. För att styla input-fältet
 * ändra i form.kommentar input
 * För att ändra textarean; form.kommentar textarea
**/

form.kontakta {
}
	form.kontakta input,textarea {
		display:block;
		width:300px;
	}
	form.kontakta textarea {
		height:200px;
	}
	form.kontakta input[type="submit"] {
		width:85px;
		float:right;
	}
	form.kontakta label {
		margin-top:10px;
		margin-bottom:5px;
		display:block;
	}